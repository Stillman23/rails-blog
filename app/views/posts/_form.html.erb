<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
     <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from savin: </h2>
     <ul>
        <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
    <% end %>

    <%= f.label :title %><br>
    <%= f.text_field :title %>

    <br>
    <br>


    <%= f.label :content, "write your article here" %><br>
    <%= f.text_area :content %>

    <br>
    <br>
    

    <%= f.label :image, "write your article here" %><br>
    <%= f.file_field :image %>

    <br>
    <br>

    <%= f.submit %>

<% end %>
