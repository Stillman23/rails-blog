 <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                    <div class="row">
                    
<div class="centered">
<%= image_tag @post.image.expiring_url, class: "post-image" %> <br>


                            <div class="post-holder">
                                <!-- post holder -->
                                
                                </div>
                                <div class="post-content">
                                    <!-- post content -->
                                    <div class="post-header">
  <h1><%= @post.title %></h1> <br>


  
  <div class="meta">
   
                                            <!-- post meta -->
                                            <span class="meta-date"><%= @post.created_at.strftime("%B %d, %Y") %> |</span>
                                            <span class="meta-comment"> Scott Tillman | </span>
                                            <span class="meta-user"><%= @post.comments.count %> Comments</span>
                                           
                                          
                                        </div>
                                    </div> <br><br>
  <h4><%= @post.content %></h4>
    <!-- /.related post block -->
                                    <br>
                                
                                        
                                    </div>
                                      </div>
                                    h1> Comments </h1>

  <%= form_for [@post, @comment] do |f| %>
      <% if @comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
    
          <ul>
          <% @comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.hidden_field :message_type, value:'comment', class:'form-control' %>
      <%= f.label :name %><br>
      <%= f.text_field :name %><br>
      <div class:"comment-section">
      <%= f.label 'comment' %><br>
      <%= f.text_area :body, rows:6 %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>
    
  <br>
  <div class="comments-area">
    <h2 class="comments-title">
      <%= "#{@post.comments.count} Comments" %>
    </h2>
    <ul>
      <% @post.comments.each do |comment|%>
        <li class="comment">
          <div class="comment-body">
              <div class="comment-info">
                  <div class="comment-header">
                      <div class="comment-meta">
                        <span class="comment-meta-date pull-right">
                          <%= comment.created_at.strftime("%FT%T") unless comment.created_at.nil? %>
                        </span>
                      </div>
                      <h4 class="user-title">
                        <%= comment.name %>
                      </h4>
                  </div>
                  <div class="comment-content">
                    <%= comment.body %>
                  </div>
              </div>
          </div>
        </li>
      <br>
      <% end %>
    </ul>
  </div> 
  <%= link_to "Edit", edit_post_path(@post) %>
  <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %>
</div>


 







